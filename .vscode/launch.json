{
  "version": "0.2.0",
  "configurations": [
    // Run testing debugging in the terminal so the workspace venv is used
    {
      "name": "Debug tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "console": "integratedTerminal"
    },
    // Configuration for pure debugging (use args and cwd attributes accordingly)
    {
      "name": "Debug subcommand: init",
      "type": "debugpy",
      "request": "launch",
      "module": "ansible_creator",
      "args": [
        "init",
        "testns.testname",
        "--galaxy-tag",
        "network,security",
        "--init-path",
        "/home/sagpaul/Work/foundation/collections/ansible_collections/cisco/test"
      ],
      "cwd": "${workspaceFolder}/src",
      "justMyCode": false
    }
  ]
}
